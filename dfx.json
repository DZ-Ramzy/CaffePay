{
  "version": 1,
  "canisters": {
    "caffpay_backend": {
      "type": "rust",
      "package": "caffpay_backend",
      "candid": "src/backend/caffpay_backend.did",
      "wasm": "src/backend/target/wasm32-unknown-unknown/release/caffpay_backend.wasm",
      "root": "src/backend"
    },
    "caffpay_frontend": {
      "type": "assets",
      "source": ["frontend/out"]
    }
  },
  "networks": {
    "local": { "bind": "127.0.0.1:4943", "type": "ephemeral" },
    "ic":    { "providers": ["https://ic0.app"], "type": "persistent" }
  },
  "output_env_file": ".env.dfx"
}
